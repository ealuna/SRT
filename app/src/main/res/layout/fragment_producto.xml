<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:fillViewport="true"
    android:background="@color/Honeydew">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/observacion_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible" />

        <android.support.v7.widget.AppCompatButton
                android:id="@+id/boton_escaner"
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="28dp"
                android:drawableLeft="@drawable/barcode_scan"
                android:drawablePadding="-20dp"
                android:paddingLeft="50dp"
                android:text="Escanear"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:theme="@style/ColorBoton2"
                tools:layout_editor_absoluteX="53dp"
                tools:layout_editor_absoluteY="29dp" />

            <TextView
                android:id="@+id/cod_barra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/boton_escaner"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_hint"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="116dp" />

        <android.support.v7.widget.CardView
            android:id="@+id/carta_articulo"
            android:layout_width="299dp"
            android:layout_height="330dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            android:layout_gravity="center"
            app:cardElevation="9dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:text="Código Producto:"
                    android:textColor="@color/color_hint" />

                <TextView
                    android:id="@+id/cod_articulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text=""
                    android:textColor="@color/color_hint" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:text="Nombre:"
                    android:textColor="@color/color_hint" />

                <TextView
                    android:id="@+id/nom_articulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text=""
                    android:lines="3"
                    android:textColor="@color/color_hint" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:text="Almacén:"
                    android:textColor="@color/color_hint" />

                <TextView
                    android:id="@+id/almacen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text=""
                    android:textColor="@color/color_hint" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="0.16"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Cajas:"
                        android:textColor="@color/color_hint" />

                    <TextView
                        android:id="@+id/caja"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.01"
                        android:gravity="center"
                        android:text="N°"
                        android:textColor="@color/color_hint" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Unidades: "
                        android:textColor="@color/color_hint"/>

                    <TextView
                        android:id="@+id/unidad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.01"
                        android:gravity="center"
                        android:text="N°"
                        android:textColor="@color/color_hint"/>

                    <CheckBox
                        android:id="@+id/ch_estado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="Obs."
                        android:textColor="@color/color_hint" />

                </LinearLayout>

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/boton_verificar"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="05dp"
                    android:drawableLeft="@drawable/clipboard_check"
                    android:drawablePadding="-20dp"
                    android:paddingLeft="50dp"
                    android:text="Correcto"
                    android:textColor="@android:color/white"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:theme="@style/ColorBoton3" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/codoculto"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

    </LinearLayout>

</ScrollView>