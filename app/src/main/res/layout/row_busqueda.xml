<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/codbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Codigo de Barra"
                android:textColor="@color/Black"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/caja"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/paquete" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="3dp"
                        android:textSize="13sp"
                        android:textColor="@color/Black"
                        android:layout_toStartOf="@+id/nomprod"
                        android:text="Código: " />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="3dp"
                        android:textSize="13sp"
                        android:textColor="@color/Black"
                        android:layout_below="@+id/textView6"
                        android:layout_toStartOf="@+id/nomprod"
                        android:text="Nombre: " />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/almprod"
                        android:layout_marginTop="3dp"
                        android:textSize="13sp"
                        android:textColor="@color/Black"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView4"
                        android:text="Almacén: " />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView"
                        android:layout_marginTop="3dp"
                        android:textSize="13sp"
                        android:textColor="@color/Black"
                        android:layout_toStartOf="@+id/almprod"
                        android:text="Caja: " />

                    <TextView
                        android:id="@+id/codprod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="3dp"
                        android:textSize="13sp"
                        android:textColor="@color/Black"
                        android:layout_marginStart="18dp"
                        android:layout_toEndOf="@+id/textView"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/nomprod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textSize="13sp"
                        android:textColor="@color/Black"
                        android:layout_alignStart="@+id/codprod"
                        android:layout_below="@+id/codprod"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/almprod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textSize="13sp"
                        android:textColor="@color/Black"
                        android:layout_below="@+id/nomprod"
                        android:layout_toEndOf="@+id/textView4"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/cajprod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/textView14"
                        android:layout_alignStart="@+id/almprod"
                        android:layout_marginTop="3dp"
                        android:text="TextView"
                        android:textColor="@color/Black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView14"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/Black"
                        android:textSize="13sp"
                        android:text="Unidad:" />

                    <TextView
                        android:id="@+id/uniprod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Black"
                        android:textSize="13sp"
                        android:text="TextView"
                        android:layout_alignBaseline="@+id/textView5"
                        android:layout_alignBottom="@+id/textView5"
                        android:layout_toEndOf="@+id/textView14" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/estado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/Crimson"
                    android:text="SIN ESTADO"
                    android:layout_weight="0.92" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-16dp"
                    android:layout_marginLeft="-10dp"
                    android:layout_marginRight="-10dp"
                    android:layout_marginTop="-16dp"
                    android:clickable="true"
                    app:rippleColor="@color/Orchid"
                    app:fabSize="mini"
                    app:srcCompat="@drawable/pencil"
                    app:useCompatPadding="true" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>