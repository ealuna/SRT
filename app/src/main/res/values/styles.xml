<resources>

    <!-- Tema con ActionBar. -->
    <style name="Con_Bar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Tema sin ActionBar. -->

    <style name="Sin_Bar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorHint">@color/color_hint</item>
    </style>

    <!-- Color borde inferior -->
    <style name="CampoTextoNaranja" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#50e263</item>
        <item name="colorControlActivated">#0bd726</item>
        <item name="android:textColorHighlight">#86ed93</item>
    </style>

    <style name="ColorBoton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#86ed93</item>
        <item name="colorButtonNormal">#0bd726</item>
    </style>

    <style name="ColorBoton3" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#ec86d4</item>
        <item name="colorButtonNormal">#d70ba7</item>
    </style>

    <style name="ColorBoton2" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#85ceed</item>
        <item name="colorButtonNormal">#0b9ad7</item>
    </style>

    <style name="ColorBotonDialog" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#8dedaa</item>
    </style>
    <style name="FAB1">
        <item name="colorAccent">#d70ba7</item>
    </style>
</resources>
